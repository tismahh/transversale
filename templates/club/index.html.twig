{% extends 'base.html.twig' %}

{% block title %}Clubs{% endblock %}


{% block body %}
    <div class="container d-block mt-5">
        <div class="row">
            <h1>Clubs</h1>
            <div class="d-inline text-end mb-1">
                <a href="{{ path('app_club_new') }}" class="btn btn-success">Create New</a>
            </div>
        </div>
        <div class="row table-wrapper">
            <table class="table table-striped table-hover table-bordered m-0">
                <thead class="table-dark">
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Nom</th>
                        <th scope="col">Description</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for club in clubs %}
                        <tr>
                            <td>{{ club.id }}</td>
                            <td>{{ club.name }}</td>
                            <td>{{ club.description }}</td>
                            <td>
                                <a href="{{ path('app_club_show', {'id': club.id}) }}" class="btn btn-sm btn-outline-primary">Show</a>
                                <a href="{{ path('app_club_edit', {'id': club.id}) }}" class="btn btn-sm btn-outline-secondary">Edit</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="4" class="text-center text-muted">Aucun element trouv√©</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}


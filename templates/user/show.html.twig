{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <div class="container d-block mt-5">
        <div class="row">
            <h1>Utilisateur</h1>
        </div>
        <div class="row table-wrapper">
        <table class="table m-0">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ user.id }}</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>{{ user.email }}</td>
                </tr>
                <tr>
                    <th>Login</th>
                    <td>{{ user.login }}</td>
                </tr>
                <tr>
                    <th>Roles</th>
                    <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                </tr>
                <tr>
                    <th>Password</th>
                    <td>{{ user.password }}</td>
                </tr>
            </tbody>
        </table>
        </div>

        <div class="row">
            <a href="{{ path('app_user_index') }}" class="btn btn-sm btn-info m-1">back to list</a>
            <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-sm btn-primary m-1">edit</a>
            {{ include('user/_delete_form.html.twig') }}
        </div>

    </div>
{% endblock %}

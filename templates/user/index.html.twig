{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <div class="container d-block mt-5">
        <div class="row">
            <h1>utilisateurs</h1>
            <div class="d-inline text-end mb-1">
                <a href="{{ path('app_user_new') }}" class="btn btn-success">Create New</a>
            </div>
        </div>
        <div class="row table-wrapper">
            <table class="table table-striped table-hover table-bordered m-0">
                <thead class="table-dark">

                    <tr>
                        <th>Id</th>
                        <th>Email</th>
                        <th>Login</th>
                        <th>Roles</th>
                        <th>Mot de passe</th>
                        <th>actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for user in users %}
                    <tr>
                        <td>{{ user.id }}</td>
                        <td>{{ user.email }}</td>
                        <td>{{ user.login }}</td>
                        <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                        <td>{{ user.password }}</td>
                        <td>
                            <a href="{{ path('app_user_show', {'id': user.id}) }}" class="btn btn-sm btn-outline-primary">show</a>
                            <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-sm btn-outline-secondary">edit</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6">Aucun element trouv√©</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
